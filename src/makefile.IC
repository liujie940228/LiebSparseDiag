F77 = ifort
F90 = ifort

#F77FLAGS = -C -g +u -r8 -132 -u              # For debugging
F77FLAGS = -O2 -r8 -u -132   # For optimizing
#F77FLAGS = -xpg -C -r8 -Mprof -u                      # For profiling

F90FLAGS = -C -g -r8 -132 -u                # For debugging
#F90FLAGS = -w90 -w95 -O2 -r8 -tpp7 -xW -u -132  # For optimizing
#F90FLAGS = -fast -r8 -C -u -132        # For profiling

CC = gcc
CCFLAGS = -O2

LIBDIR = $(HOME)/f77/lib
LIBFLAGS = -L$(MKLROOT)/2023.2.0/lib/intel64 -lmkl_intel_lp64 -lmkl_sequential -lmkl_core -lpthread -lm -ldl -ljadamilu

PRINT1 = a2ps -g -o-
PRINT2 = > AMLdiag.ps # | fleet -odouble

LSDdiag.IC:    CommonModules.o LSDModules.o random.o main_LSD.o util.o inout.o etime.o makefile.IC
	$(F90) $(F90FLAGS) -o LSDdiag.IC CommonModules.o LSDModules.o\
                util.o main_LSD.o inout.o random.o etime.o $(LIBFLAGS)

CommonModules.o:     CommonModules.f90
	$(F90) $(F90FLAGS) -c CommonModules.f90

LSDModules.o:     LSDModules.f90
	$(F90) $(F90FLAGS) -c LSDModules.f90

random.o:     random.f90
	$(F90) $(F90FLAGS) -c random.f90

main_LSD.o:     main_LSD.f90
	$(F90) $(F90FLAGS) -c main_LSD.f90

util.o:     util.f90
	$(F90) $(F90FLAGS) -c util.f90

inout.o:     inout.f90
	$(F90) $(F90FLAGS) -c inout.f90

etime.o:     etime.f90
	$(F90) $(F90FLAGS) -c etime.f90

tar:	AMLdiag.tar	
LSDdiag.tar:   makefile.* main_LSD.f90 util.f90 inout.f90 \
                random.f90 LiebSparsediag.inp
	tar -cvf LSDdiag.tar makefile.* main_LSD.f90 util.f90 \
                inout.f90 random.f90 LiebSparsediag.inp

print:  
	$(PRINT1) LSDdiag.inp main_LSD.f90 util.f90 inout.f90 random.f90 $(PRINT2)

clean:
	rm -f core *.mod *.o
